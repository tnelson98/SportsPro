@model List<ProductModel>
@{
    ViewData["Title"] = "Product List";
}

<div class="container">
    @if(TempData.Keys.Contains("message"))
    {
        <h1 class="mt-3 p-2 bg-info text-white text-center">@TempData["message"]</h1>
    }
    <div class="row">
        <h1 class="fw-bold pb-1 mb-2">Product Manager</h1>
    </div>
    <table class="table table-hover">
        <thead>
            <tr><th>Code</th><th>Name</th><th>Price</th><th>Release Date</th></tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Code</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Date</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit"
                           asp-route-id="@product.ProductModelId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Delete"
                           asp-route-id="@product.ProductModelId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
</div>