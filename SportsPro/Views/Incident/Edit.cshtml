@model IncidentEditViewModel
@{
    string title = ViewBag.Action + " Incident";
    ViewData["Title"] = title;
}

<partial name="_ScriptsPartial" />

<h1>@title</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.Customer" class="form-label">Customer</label>
        <select asp-items="@(new SelectList(Model.Customers, "FullName", "FullName"))" asp-for="@Model.CurrentInc.Customer" class="form-select">
            <option value="">Select a customer...</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.Product" class="form-label">Product</label>
        <select asp-items="@(new SelectList(Model.Products, "Name", "Name"))" asp-for="@Model.CurrentInc.Product" class="form-select">
            <option value="">Select a product...</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.Title" class="form-label">Title</label>
        <input asp-for="@Model.CurrentInc.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.Description" class="form-label">Description</label>
        <textarea asp-for="@Model.CurrentInc.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.Technician" class="form-label">Technician</label>
        <select asp-items="@(new SelectList(Model.Technicians, "Name", "Name"))" asp-for="@Model.CurrentInc.Technician" class="form-select">
            <option value="">Select a technician....</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.OpenDate" class="form-label">Date Opened</label>
        <input asp-for="@Model.CurrentInc.OpenDate" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="@Model.CurrentInc.CloseDate" class="form-label">Date Closed</label>
        <input asp-for="@Model.CurrentInc.CloseDate" class="form-control" />
    </div>

    <input type="hidden" asp-for="@Model.CurrentInc.Id" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Incident" asp-action="List" class="btn btn-outline-secondary">Cancel</a>
</form>